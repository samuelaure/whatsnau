# --- Platform ---
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# --- Security & Auth ---
# Use a long random string (e.g., generated with 'openssl rand -base64 32')
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRES_IN=7d
# comma-separated list of allowed domains for CORS
ALLOWED_ORIGINS=https://whatsnau.9nau.com

# --- WhatsApp Cloud API ---
# Found in Meta Developer Dashboard -> WhatsApp -> API Setup
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_VERSION=v18.0
# The token you enter in Meta Dashboard to verify your webhook
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token
# Your phone number in international format (e.g., +34600111222)
WHATSAPP_PHONE_NUMBER=+34000000000

# --- OpenAI ---
OPENAI_API_KEY=sk-your-openai-api-key
PRIMARY_AI_MODEL=gpt-4o
CHEAP_AI_MODEL=gpt-4o-mini

# --- Notifications (Optional) ---
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
