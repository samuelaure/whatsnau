services:
  app:
    container_name: whatsnau
    environment:
      - DB_HOST=shared_postgres
      - REDIS_HOST=shared_redis

    networks:
      - shared-mesh
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.whatsnau.rule=Host(`${PUBLIC_DOMAIN:-whatsnau.localhost}`)"
      - "traefik.http.routers.whatsnau.entrypoints=web"
      - "traefik.http.services.whatsnau.loadbalancer.server.port=3000"
      - "traefik.docker.network=shared-mesh"

  migration-runner:
    environment:
      - DB_HOST=shared_postgres
    networks:
      - shared-mesh
    # Inherits depends_on: [] from base, avoiding conflicts with shared infra.

  worker:
    environment:
      - DB_HOST=shared_postgres
      - REDIS_HOST=shared_redis
    networks:
      - shared-mesh
    # Inherits depends_on: [] from base.

  postgres:
    profiles: [disabled]

  redis:
    profiles: [disabled]

networks:
  shared-mesh:
    external: true
