services:
  app:
    container_name: whatsnau
    environment:
      - DB_HOST=shared_postgres
      - REDIS_HOST=shared_redis
    depends_on:
      migration-runner:
        condition: service_completed_successfully
    networks:
      - shared-mesh
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.whatsnau.rule=Host(`${PUBLIC_DOMAIN:-whatsnau.localhost}`)"
      - "traefik.http.routers.whatsnau.entrypoints=web"
      - "traefik.http.services.whatsnau.loadbalancer.server.port=3000"
      - "traefik.docker.network=shared-mesh"

  migration-runner:
    environment:
      - DB_HOST=shared_postgres
    networks:
      - shared-mesh
    depends_on: [] # Remove dependency on the local postgres service

  worker:
    environment:
      - DB_HOST=shared_postgres
      - REDIS_HOST=shared_redis
    networks:
      - shared-mesh
    depends_on: [] # Remove dependency on the local postgres/redis services

  postgres:
    profiles: [disabled]

  redis:
    profiles: [disabled]

networks:
  shared-mesh:
    external: true
