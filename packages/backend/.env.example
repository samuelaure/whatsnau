# --- Platform ---
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# --- Security & Auth ---
# Use a long random string (e.g., generated with 'openssl rand -base64 32')
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRES_IN=7d
# comma-separated list of allowed domains for CORS
ALLOWED_ORIGINS=https://whatsnau.9nau.com,https://9nau.com,https://www.9nau.com

# --- WhatsApp Cloud API ---
# Found in Meta Developer Dashboard -> WhatsApp -> API Setup
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_VERSION=v18.0
# Meta App (Required for Embedded Signup)
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
# The token you enter in Meta Dashboard to verify your webhook
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token
# Your phone number in international format (e.g., +34600111222)
WHATSAPP_PHONE_NUMBER=+34000000000

# --- OpenAI ---
OPENAI_API_KEY=sk-your-openai-api-key
PRIMARY_AI_MODEL=gpt-4o
CHEAP_AI_MODEL=gpt-4o-mini

# --- Database (PostgreSQL) ---
DB_USER=whatsnau_user
DB_NAME=whatsnau
DB_PASSWORD=local_dev_password
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@shared_postgres:5432/${DB_NAME}?schema=public

# --- Infrastructure ---
PUBLIC_DOMAIN=whatsnau.localhost

# --- Notifications (Optional) ---
TELEGRAM_BOT_TOKEN=telegram_bot_token
TELEGRAM_CHAT_ID=telegram_chat_id

# --- Deployment (Hetzner) ---
HETZNER_HOST=
HETZNER_USER=
HETZNER_SSH_KEY=
HETZNER_DEPLOY_PATH=whatsnau

# --- Redis & Queues ---
REDIS_HOST=shared_redis
REDIS_PORT=6379
# REDIS_PASSWORD=

# --- YCloud (Alternative WhatsApp Provider) ---
# WHATSAPP_PROVIDER can be 'meta' or 'ycloud'
WHATSAPP_PROVIDER=meta
# YCLOUD_API_KEY=your_ycloud_api_key_here
